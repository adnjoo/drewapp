<h1>New Note</h1>

<%= form_with model: @note, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit 'Create Note' %>
  </div>
<% end %>

<%= link_to 'Back to Notes', notes_path %>
